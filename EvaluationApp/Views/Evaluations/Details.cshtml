<div class="container">
    <div class="row">
        <div class="col-md-9">
            <!-- Nav tabs --><div class="card">
                <ul class="nav nav-tabs" role="tablist">

                    <li role="presentation" class="active">
                        <a href="#tab0" aria-controls="tab0" role="tab" data-toggle="tab">@Model.Sections.ElementAt(0).Name</a>
                    </li>

                    @for (int i = 1; i < Model.Sections.Count; i++)
                    {
                        string anchorTarget = "tab" + i;

                        <li role="presentation">
                            <a href="#@anchorTarget" aria-controls="@anchorTarget" role="tab" data-toggle="tab">@Model.Sections.ElementAt(i).Name</a>
                        </li>
                    }
                </ul>
                <!-- Tab panes -->
                <div class="tab-content">
                    <div role="tabpanel" class="tab-pane active" id="tab0">
                        @foreach (var criteria in Model.Sections.ElementAt(0).Criteria)
                        {
                            <h4>@criteria.Name <small>@criteria.Grade.Name</small></h4>
                        }
                    </div>

                    @for (int i = 1; i < Model.Sections.Count; i++)
                    {
                        string anchorTarget = "tab" + i;
                        <div role="tabpanel" class="tab-pane" id="@anchorTarget">

                            @foreach (var criteria in Model.Sections.ElementAt(i).Criteria)
                            {
                                <h4>@criteria.Name <small>@criteria.Grade.Name</small></h4>
                            }
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
</div>
<div>
    <a asp-action="Completed">Back to Completed Evaluations</a>
</div>


