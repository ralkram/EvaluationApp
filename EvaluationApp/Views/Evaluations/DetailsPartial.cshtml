@model EvaluationApp.Models.EvaluationViewModel
<br /> <br />

<h2>@Model.EvaluationName <small>for</small> @Model.Employee.Name</h2>
<br>

<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <!-- Nav tabs -->
            <div class="card">
                <ul class="nav nav-tabs" role="tablist">

                    <li role="presentation" class="nav-item">
                        <a href="#tab0" aria-controls="tab0" role="tab" data-toggle="tab" class="nav-link active">@Model.Sections.ElementAt(0).Name</a>
                    </li>

                    @for (int i = 1; i < Model.Sections.Count; i++)
                    {
                        string anchorTarget = "tab" + i;

                        <li role="presentation" class="nav-item">
                            <a href="#@anchorTarget" aria-controls="@anchorTarget" role="tab" data-toggle="tab" class="nav-link">@Model.Sections.ElementAt(i).Name</a>
                        </li>
                    }

                </ul>
                <!-- Tab panes -->
                <div class="tab-content">

                    <div role="tabpanel" class="tab-pane active" id="tab0">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Criteria</th>
                                    <th>Evaluation</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var criteria in Model.Sections.ElementAt(0).Criteria)
                                {
                                    <tr>
                                        <td>@criteria.Name</td>
                                        @if (@criteria.Grade != null)
                                        {
                                            <td>@criteria.Grade.Name</td>
                                        }
                                        else
                                        {
                                            <td><font color="red">Not Evaluated Yet</font></td>
                                        }
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    @for (int i = 1; i < Model.Sections.Count; i++)
                    {
                        string anchorTarget = "tab" + i;
                        <div role="tabpanel" class="tab-pane" id="@anchorTarget">

                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Criteria</th>
                                        <th>Evaluation</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var criteria in Model.Sections.ElementAt(i).Criteria)
                                    {
                                        <tr>
                                            <td>@criteria.Name</td>
                                            @if (@criteria.Grade != null)
                                            {
                                                <td>@criteria.Grade.Name</td>
                                            }
                                            else
                                            {
                                                <td><font color ="red">Not Evaluated Yet</font></td>
                                            }
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>

            </div>
        </div>
    </div>
</div>
<br>
<link href="@Url.Content("~/css/DetailsCompleted.css")" rel="stylesheet" type="text/css" />