@model EvaluationApp.Models.EvaluationViewModel
@{ Layout = null;}

<div class="modal-header">
    <h5 class="modal-title" id="exampleModalLabel">Are you sure you want to delete this?</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body">
    <h6>@Model.EvaluationName <small>for</small> @Model.Employee.Name</h6>
    <h6><small>Form template </small>@Model.FormName</h6>
    <h6><small>Created on </small>@Model.CreatedDate</h6>
    <h6><small>Last modified on </small>@Model.ModifiedDate</h6>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>
</div>
