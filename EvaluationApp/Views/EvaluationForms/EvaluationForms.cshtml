@model IEnumerable<EvaluationApp.Domain.FormMockup.Form>


<br /><br />
<div class="container">
    <div class="row">
        <div class="table-responsive">
            <table class="table table-hover" id="table_id">
                <thead>
                    <tr>
                        <th>Form Name</th>
                        <th>Status</th>
                        <th>Description</th>
                        <th>Created</th>
                        <th>Modified</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody id="myTable">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <a asp-action="FormPreview" asp-route-formId="@item.Id">@item.Name</a>
                            </td>
                            <td>
                                @if (item.Status)
                                {
                                    <span class="badge badge-success">Enabled</span>
                                }
                                else
                                {
                                    <span class="badge badge-secondary">Disabled</span>
                                }
                            </td>
                            <td>@item.Description</td>
                            <td>@item.CreatedDate.ToString("dd/MM/yy")</td>
                            <td>@item.ModifiedDate.ToString("dd/MM/yy")</td>
                            <td>
                                @{

                                    var evaluationAction = "StartFormEvaluationModal";

                                    <a asp-action="FormPreview" asp-route-formId="@item.Id"><img src="~/images/preview.jpg" /></a>
                                    <img src="~/images/start.png" data-toggle="modal" onclick="createModal('@Url.Action(evaluationAction, "Evaluations", new { id = item.Id})')" />
                                }
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="modal fade" id="myModal" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog">
        <div class="modal-content" id="modelContent">
        </div>
    </div>
</div>