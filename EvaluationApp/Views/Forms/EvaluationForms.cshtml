@model IEnumerable<EvaluationApp.Domain.FormMockup.Form>


<br /><br />
<div class="container">
    <div class="row">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Form Name</th>
                        <th>Status</th>
                        <th>Description</th>
                        <th>Created</th>
                        <th>Modified</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody id="myTable">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>
                                @if (item.Status)
                                {
                                    <span class="label label-success">Enabled</span>
                                }
                                else
                                {
                                    <span class="label label-default">Disabled</span>
                                }
                            </td>
                            <td>@item.Description</td>
                            <td>@item.CreatedDate</td>
                            <td>@item.ModifiedDate</td>
                            <td>
                                <img src="~/images/preview.jpg" />
                                <img src="~/images/start.png" data-toggle="modal" data-target="#myModal"/>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
        <div class="col-md-12 text-center">
            <ul class="pagination pagination-lg pager" id="myPager"></ul>
        </div>
    </div>
</div>


<!-- Modal -->
<div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Start Evaluation</h4>
            </div>
            <div class="modal-body">
                <form role="form">
                    <div class="form-group">
                        <label for="name">Evaluation Name</label>
                        <input type="text" class="form-control" id="name">
                    </div>
                    <div class="form-group">
                        <label for="name">Evaluation Form</label>
                        <input type="text" class="form-control" id="form">
                    </div>
                    <div class="form-group">
                        <label for="name">Employee</label>
                        <input type="text" class="form-control" id="name">
                    </div>
                    <button type="submit" class="btn btn-primary" data-dismiss="modal" 
                          onclick="location.href='@Url.Action("StartEvaluation", "Forms")'">Start Evaluation</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                </form>
            </div>  
            
        </div>

    </div>
</div>
